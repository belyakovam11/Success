{
    "openapi": "3.0.0",
    "info": {
        "title": "User Management API",
        "version": "1.0.0",
        "description": "API для управления пользователями, включая регистрацию, аутентификацию и получение статистики пользователя."
    },
    "paths": {
        "/register/": {
            "post": {
                "summary": "Регистрация пользователя",
                "operationId": "registerUser",
                "tags": [
                    "User Management"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "johndoe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "johndoe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "required": [
                                    "username",
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Пользователь успешно зарегистрирован",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Успешно зарегистрированы!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибки при регистрации (например, не все поля заполнены)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Все поля обязательны"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Ошибка сервера",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login/": {
            "post": {
                "summary": "Аутентификация пользователя",
                "operationId": "loginUser",
                "tags": [
                    "User Management"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "johndoe"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "required": [
                                    "username",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Пользователь успешно вошел в систему",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Login successful!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибки при аутентификации (неверное имя пользователя или пароль)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Неверное имя пользователя или пароль."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Ошибка сервера",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/username/": {
            "get": {
                "summary": "Получение информации о пользователе",
                "operationId": "getUsernameInfo",
                "tags": [
                    "User Management"
                ],
                "responses": {
                    "200": {
                        "description": "Информация о пользователе (имя, рейтинг, любимая категория)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "username": {
                                            "type": "string",
                                            "example": "johndoe"
                                        },
                                        "rating": {
                                            "type": "integer",
                                            "example": 120
                                        },
                                        "favorite_category": {
                                            "type": "string",
                                            "example": "Science"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка при получении данных (пользователь не авторизован)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "User is not logged in"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/rooms": {
            "get": {
                "summary": "Получить список всех комнат",
                "operationId": "getRooms",
                "tags": ["Room Management"],
                "responses": {
                    "200": {
                        "description": "Список всех комнат",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {"type": "integer", "description": "Уникальный идентификатор комнаты"},
                                            "name": {"type": "string", "description": "Название комнаты"},
                                            "player_count": {"type": "integer", "description": "Максимальное количество игроков"},
                                            "theme": {"type": "string", "description": "Тема комнаты"},
                                            "answer_time": {"type": "integer", "description": "Время ответа"},
                                            "created_at": {"type": "string", "format": "date-time", "description": "Дата создания"}
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/rooms/{room_name}/participants": {
            "get": {
                "summary": "Получить список участников комнаты",
                "operationId": "getRoomParticipants",
                "tags": ["Room Management"],
                "parameters": [
                    {
                        "name": "room_name",
                        "in": "path",
                        "required": true,
                        "description": "Название комнаты",
                        "schema": {"type": "string"}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список участников комнаты",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "user": {"type": "string", "description": "Имя пользователя"},
                                            "joined_at": {"type": "string", "format": "date-time", "description": "Дата присоединения"}
                                        }
                                    }
                                }
                            }
                        },
                        "404": {
                            "description": "Комната не найдена",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "error": {"type": "string"}
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/rooms/join": {
            "post": {
                "summary": "Присоединиться к комнате",
                "operationId": "joinRoom",
                "tags": ["Room Management"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "roomName": {"type": "string", "description": "Название комнаты"},
                                    "username": {"type": "string", "description": "Имя пользователя"}
                                },
                                "required": ["roomName", "username"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Успешное присоединение",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {"type": "string"},
                                        "roomId": {"type": "integer"},
                                        "userId": {"type": "string"}
                                    }
                                }
                            }
                        },
                        "400": {
                            "description": "Ошибка запроса",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "error": {"type": "string"}
                                        }
                                    }
                                }
                            }
                        },
                        "404": {
                            "description": "Комната не найдена",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "error": {"type": "string"}
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/rooms/create": {
            "post": {
                "summary": "Создать новую комнату",
                "operationId": "createRoom",
                "tags": ["Room Management"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {"type": "string", "description": "Название комнаты"},
                                    "playerCount": {"type": "integer", "description": "Максимальное количество игроков"},
                                    "theme": {"type": "string", "description": "Тема комнаты"},
                                    "answerTime": {"type": "integer", "description": "Время ответа"}
                                },
                                "required": ["name", "playerCount", "theme", "answerTime"]
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Комната успешно создана",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "message": {"type": "string"},
                                            "room": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {"type": "integer"},
                                                    "name": {"type": "string"},
                                                    "playerCount": {"type": "integer"},
                                                    "theme": {"type": "string"},
                                                    "answerTime": {"type": "integer"}
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "400": {
                            "description": "Ошибка при создании комнаты",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "error": {"type": "string"}
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "username",
                    "email",
                    "password"
                ]
            }
        }
    }
}